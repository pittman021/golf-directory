<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Location Header -->
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <h1 class="text-4xl font-bold text-gray-900"><%= @location.name %></h1>
        <p class="mt-2 text-xl text-gray-600"><%= @location.region %>, <%= @location.country %></p>
      </div>
      <div class="text-right">
        <p class="text-lg font-medium text-gray-900">Best: Time to Visit</p>
        <p class="text-gray-600"><%= @location.best_months %></p>
      </div>
    </div>
  </div>

  <!-- Why Choose Section -->
  <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
    <h2 class="text-2xl font-bold mb-4">Why Choose <%= @location.name %> for Your Next Trip</h2>
    <p class="text-gray-700 text-lg"><%= @location.summary %></p>
  </div>

  <!-- Map Placeholder (to be implemented later) -->
  <div class="bg-gray-100 rounded-lg mb-8 h-[400px] relative">
    <div class="absolute bottom-4 right-4 bg-white rounded-lg p-4">
      <%= @location.best_months %>
    </div>
  </div>

  <!-- Information Section -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold mb-6">Information</h2>
    <div class="bg-white rounded-lg shadow-sm divide-y">
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Description</h3>
        <p class="text-gray-600"><%= @location.description %></p>
      </div>
      
      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Weather</h3>
        <p class="text-gray-600"><%= @location.weather_info %></p>
      </div>

      <div class="p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nearest Airports</h3>
        <p class="text-gray-600"><%= @location.nearest_airports %></p>
      </div>
    </div>
  </div>

  <!-- Courses Section -->
  <div>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Courses in <%= @location.name %></h2>
      <div class="relative">
        <select class="rounded-lg border-gray-300 py-2 pl-3 pr-10 text-base focus:ring-[#355E3B] focus:border-[#355E3B]">
          <option>Recommended</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
          <option>Rating: High to Low</option>
        </select>
      </div>
    </div>

    <div class="space-y-4">
      <% @location.courses.each do |course| %>
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <div class="flex gap-4 items-start">
            <!-- Course Image -->
            <div class="w-16 h-16 flex-shrink-0">
              <img 
                src="https://images.unsplash.com/photo-1587174486073-ae5e5cff23aa?q=80&w=480&auto=format&fit=crop"
                class="w-full h-full object-cover rounded-lg"
                alt="<%= course.name %>"
              >
            </div>

            <!-- Course Info -->
            <div class="flex-grow">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-lg font-semibold text-gray-900"><%= course.name %></h3>
                  <p class="text-sm text-gray-600"><%= course.course_type.humanize %></p>
                </div>
                <div class="flex items-center gap-4">
                  <% if course.green_fee.present? %>
                    <span class="text-base font-medium text-gray-900">
                      $<%= course.green_fee %>
                    </span>
                  <% end %>
                  <% if course.average_rating.present? %>
                    <span class="text-base font-medium text-gray-900">
                      <%= number_with_precision(course.average_rating, precision: 1) %>
                    </span>
                  <% end %>
                  <%= link_to "View Details", course_path(course), 
                      class: "px-4 py-1.5 rounded-lg border border-gray-300 text-sm font-medium text-gray-700 hover:bg-gray-50" %>
                </div>
              </div>

              <!-- Layout Tags -->
              <div class="mt-2 flex flex-wrap gap-2">
                <% course.layout_tags.first(2).each do |tag| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-50 text-green-700">
                    <%= tag.titleize %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Nearby Locations -->
  <% if @nearby_locations.any? %>
    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Nearby Golf Destinations</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @nearby_locations.each do |location| %>
          <%= link_to location_path(location), class: "block" do %>
            <div class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
              <div class="p-4">
                <h3 class="text-lg font-medium text-gray-900"><%= location.name %></h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= [location.region, location.state, location.country].compact.join(', ') %>
                </p>
                <p class="mt-2 text-sm text-gray-600">
                  <%= pluralize(location.courses.count, 'course') %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>