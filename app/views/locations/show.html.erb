<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Location Header -->
  <div class="bg-white shadow rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @location.name %></h1>
          <p class="mt-1 text-sm text-gray-500"><%= @location.region %>, <%= @location.country %></p>
        </div>
        <div class="text-right">
          <p class="text-sm text-gray-500">Best Time to Visit</p>
          <p class="text-lg font-medium text-gray-900"><%= @location.best_months %></p>
        </div>
      </div>
    </div>

    <!-- Location Details -->
    <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
      <dl class="sm:divide-y sm:divide-gray-200">
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @location.description %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Nearest Airports</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @location.nearest_airports %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Weather Information</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @location.weather_info %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Map Section -->
  <div class="mt-8 bg-white shadow rounded-lg overflow-hidden">
    <div class="px-4 py-5 sm:px-6">
      <h2 class="text-xl font-semibold text-gray-900">Course Locations</h2>
    </div>
    <% map_id = Rails.application.credentials.google_maps_map_id %>
    <!-- Add this temporary debug info -->
    <div class="bg-yellow-100 p-4 mb-4 text-sm" style="display: none;">
      <pre>Map ID from Rails: <%= map_id.inspect %></pre>
    </div>
    <div class="relative bg-gray-100 rounded-lg" style="height: 400px;">
      <div id="location-map" 
           class="w-full h-full rounded-lg" 
           data-controller="map"
           data-map-latitude-value="<%= @location.latitude.to_f %>"
           data-map-longitude-value="<%= @location.longitude.to_f %>"
           data-map-map-id-value="<%= Rails.application.credentials.google_maps_map_id %>"
           data-map-markers-value="<%= [
             {
               name: @location.name,
               latitude: @location.latitude.to_f,
               longitude: @location.longitude.to_f,
               courses_count: @location.courses.count,
               average_rating: @location.reviews.average(:rating)&.round(1)
             }
           ].to_json %>">
      </div>
    </div>
  </div>

  <!-- Courses Grid -->
  <div class="mt-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Courses at <%= @location.name %></h2>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @courses.each do |course| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <h3 class="text-lg font-semibold text-gray-900"><%= course.name %></h3>
            <p class="mt-2 text-sm text-gray-500"><%= course.course_type.humanize %></p>
            
            <div class="mt-4 flex items-center justify-between">
              <div class="flex items-center">
                <% course.average_rating.to_i.times do %>
                  <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                <% end %>
                <span class="ml-2 text-sm text-gray-600">
                  (<%= course.reviews.count %> reviews)
                </span>
              </div>
              <span class="text-sm font-medium text-gray-900">
                <%= course.green_fee_range %>
              </span>
            </div>

            <div class="mt-4 grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-gray-500">Holes:</span>
                <span class="ml-1 text-gray-900"><%= course.number_of_holes %></span>
              </div>
              <div>
                <span class="text-gray-500">Par:</span>
                <span class="ml-1 text-gray-900"><%= course.par %></span>
              </div>
              <div>
                <span class="text-gray-500">Yardage:</span>
                <span class="ml-1 text-gray-900"><%= course.yardage %></span>
              </div>
            </div>

            <%= link_to "View Details", course_path(course), class: "mt-6 w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Nearby Locations -->
  <% if @nearby_locations.any? %>
    <div class="mt-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Nearby Golf Destinations</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @nearby_locations.each do |location| %>
          <%= link_to location_path(location), class: "block" do %>
            <div class="bg-white shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
              <div class="p-4">
                <h3 class="text-lg font-medium text-gray-900"><%= location.name %></h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= [location.region, location.state, location.country].compact.join(', ') %>
                </p>
                <p class="mt-2 text-sm text-gray-600">
                  <%= pluralize(location.courses.count, 'course') %>
                </p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%# Add Google Maps JavaScript %>
<% content_for :head do %>
  <script>
    window.GOOGLE_MAPS_CONFIG = {
      mapId: '<%= map_id %>'
    };
  </script>
<% end %>