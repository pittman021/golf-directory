<% content_for :google_maps, true %>

<div>
  <!-- Filters Section - Redesigned as a horizontal bar above the map -->
  
  <div class="px-2 sm:px-4 lg:px-6 mt-2" data-controller="layout comparison filters">
    <!-- Filters -->
    <%= form_tag root_path, method: :get, 
        data: { 
          filters_target: "form"
        } do %>
      <div class="mb-4 grid grid-cols-1 sm:grid-cols-3 gap-3 max-w-3xl mx-auto">
        <%= select_tag :trip_cost,
            options_for_select([
              ['💰Budget (Up to $1,500)', 'budget'],
              ['💰💰Mid-Range ($1,501 - $2,500)', 'mid_range'],
              ['💰💰💰Premium ($2,501 - $4,000)', 'premium'],
              ['💰💰💰💰Luxury ($4,000+)', 'luxury']
            ], params[:price_category]),
            { prompt: "Trip Cost",
              class: "w-full rounded-full border border-gray-300 bg-transparent py-2 pl-3 pr-10 text-sm focus:ring-[#355E3B] focus:border-[#355E3B]",
              data: { action: "change->filters#filter" } } %>
              
        <!-- Golf Experience Dropdown -->
        <div class="relative">
        <%= select_tag "golf",
        options_for_select([
          ['🎖️ Top 100 Courses', 'golf:top_100'],
          ['🏆 Tournament Courses', 'golf:tournament'],
          ['💰 Bucket List', 'golf:bucket_list'],
          ['🏞️ Multiple Courses', 'golf:multiple_courses']
        ], 
        params[:tags]&.include?('golf:top100') ? 'golf:top_100' :
        params[:tags]&.include?('golf:tournament') ? 'golf:tournament' :
        params[:tags]&.include?('golf:bucket_list') ? 'golf:bucket_list' :
        params[:tags]&.include?('golf:multiple_courses') ? 'golf:multiple_courses' : nil),
        {
          prompt: "Golf Experience",
          class: "w-full rounded-full border border-gray-300 bg-transparent py-2 pl-3 pr-10 text-sm focus:ring-[#355E3B] focus:border-[#355E3B]",
          data: { action: "change->filters#addTag" }
        } %>
    
        </div>
        
        <!-- Trip Style Dropdown -->
        <div class="relative">
          <%= select_tag "trip_style",
              options_for_select([
                ['🏨 Resort', 'style:resort'],
                ['👨‍👩‍👧‍👦 Family Friendly', 'style:family'],
                ['🏖️ Coastal ', 'style:coastal'],
                ['🏔️ Mountain', 'style:mountain'],
                ['🌵 Desert', 'style:desert']
              ], params[:tags]&.include?('style:resort') ? 'style:resort' : 
                 params[:tags]&.include?('style:family') ? 'style:family' : 
                 params[:tags]&.include?('style:coastal') ? 'style:coastal' :
                 params[:tags]&.include?('style:mountain') ? 'style:mountain' :
                 params[:tags]&.include?('style:desert') ? 'style:desert' : nil),
              { prompt: "Trip Style",
                class: "w-full rounded-full border border-gray-300 bg-transparent py-2 pl-3 pr-10 text-sm focus:ring-[#355E3B] focus:border-[#355E3B]",
                data: { action: "change->filters#addTag" } } %>
        </div>
              
        <%= hidden_field_tag "tags[]", "", id: "hidden_tags_field" %>
      </div>
      
      <div id="selected_tags" class="mb-4 flex flex-wrap gap-2 justify-center">
        <% if params[:tags].present? %>
          <% params[:tags].each do |tag| %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-[#355E3B]/10 text-[#355E3B]">
              <%= tag.start_with?('golf:') ? tag.sub('golf:', 'Golf: ').titleize : 
                 tag.start_with?('style:') ? tag.sub('style:', 'Style: ').titleize : 
                 tag.titleize %>
              <button type="button" class="ml-1 text-[#355E3B] hover:text-[#355E3B]/80" data-tag="<%= tag %>" data-action="click->filters#removeTag">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </span>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Layout Toggle -->
    <div class="flex justify-end items-center mb-4 max-w-4xl mx-auto">
      <div class="layout-toggle hidden sm:block">
        <div class="inline-flex rounded-md shadow-sm" role="group">
          <button type="button" 
                  class="px-4 py-2 text-sm font-medium rounded-l-md border border-gray-300 focus:z-10 focus:ring-2 focus:ring-indigo-500"
                  data-layout-target="gridButton"
                  data-action="click->layout#showGrid">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
          </button>
          <button type="button" 
                  class="px-4 py-2 text-sm font-medium rounded-r-md border border-gray-300 focus:z-10 focus:ring-2 focus:ring-indigo-500"
                  data-layout-target="listButton"
                  data-action="click->layout#showList">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Map and Cards Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 items-start">
      <!-- Map View - Full width and more prominent -->
      <div class="w-full h-[calc(100vh-200px)] min-h-[600px] bg-white rounded-lg shadow-sm overflow-hidden sticky top-4" 
           id="locations-map"
           data-controller="map location-hover"
           data-map-markers-value="<%= @locations.map { |location| {
             latitude: location.latitude.to_f,
             longitude: location.longitude.to_f,
             name: location.name,
             id: location.id,
             image_url: location.image_url,
             courses_count: location.courses.count,
             avg_green_fee: number_to_currency(location.avg_green_fee, precision: 0),
             estimated_trip_cost: number_to_currency(location.estimated_trip_cost, precision: 0),
             info: "#{location.name}<br>#{pluralize(location.courses.count, 'course')}<br>Avg: #{number_to_currency(location.avg_green_fee, precision: 0)}"
           }}.to_json %>">
      </div>
      
      <!-- Location Cards Grid View -->
      <div data-layout-target="gridView" class="grid-view-wrapper h-[calc(100vh-200px)] min-h-[600px] overflow-y-auto">
        <div id="grid_view" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 pb-8">
          <% @locations.each do |location| %>
            <div class="location-card h-96" 
                 data-location-id="<%= location.id %>"
                 data-controller="location-card"
                 data-action="mouseover->location-hover#highlightMarker mouseout->location-hover#resetMarker click->location-hover#focusMarker">
              <!-- Redesigned Location Card -->
              <div class="bg-white rounded-lg overflow-hidden shadow h-full flex flex-col">
                <!-- Card Image Section with Overlay Text -->
                <div class="relative h-48 flex-shrink-0">
                  <% if location.image_url.present? %>
                    <%= image_tag location.image_url, class: "w-full h-full object-cover", alt: "#{location.name}" %>
                  <% else %>
                    <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                      <span class="text-gray-400">No image</span>
                    </div>
                  <% end %>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                  <div class="absolute bottom-0 left-0 p-4">
                    <h3 class="text-lg font-bold text-white truncate">
                      <%= link_to location.name, location_path(location), data: { turbo_frame: "_top" }, class: "text-white hover:text-gray-200" %>
                    </h3>
                    <p class="text-sm text-gray-200">
                      <%= location.state || location.country %>
                    </p>
                  </div>
                </div>
                
                <!-- Card Body Section -->
                <div class="p-4 flex flex-col flex-grow">
                  <!-- Tags Section -->
                  <div class="flex flex-wrap gap-1 mb-3">
                    <% top_tags = [] %>
                    <% top_tags << "top_100_courses" if location.tags&.include?("top_100_courses") %>
                    <% top_tags << "resort" if location.lodgings&.any? && location.tags&.include?("resort") %>
                    <% top_tags << "family" if location.tags&.include?("family") %>
                    <% top_tags << "hard_to_book" if location.tags&.include?("hard_to_book") %>
                    <% top_tags << "bucket_list" if location.tags&.include?("bucket_list") %>
                    
                    <% top_tags.take(3).each do |tag| %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded-md text-xs font-medium
                                <%= tag == 'top_100_courses' ? 'bg-blue-100 text-blue-800' : 
                                   tag == 'resort' ? 'bg-green-100 text-green-800' :
                                   tag == 'family' ? 'bg-yellow-100 text-yellow-800' :
                                   tag == 'hard_to_book' ? 'bg-red-100 text-red-800' :
                                   tag == 'bucket_list' ? 'bg-purple-100 text-purple-800' : 
                                   'bg-gray-100 text-gray-800' %>">
                        <% if tag == 'top_100_courses' %>
                          🎖️ Top 100
                        <% elsif tag == 'resort' %>
                          Resort
                        <% elsif tag == 'family' %>
                          Family
                        <% elsif tag == 'hard_to_book' %>
                          Hard to Book
                        <% elsif tag == 'bucket_list' %>
                          Bucket List
                        <% else %>
                          <%= tag.titleize %>
                        <% end %>
                      </span>
                    <% end %>
                  </div>
                  
                  <!-- Price and Details -->
                  <div class="mt-auto">
                    <div class="flex justify-between items-center mt-3">
                      <div class="text-xl font-bold text-gray-900">
                        <%= number_to_currency(location.estimated_trip_cost, precision: 0) %>
                      </div>
                    </div>
                    
                    <!-- Lodging and Green Fees Info -->
                    <div class="mt-2 text-sm text-gray-600">
                      <div>Lodging: <%= number_to_currency(location.avg_lodging_cost_per_night, precision: 0) %></div>
                      <div>Green Fees: <%= number_to_currency(location.avg_green_fee, precision: 0) %></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- List View (Hidden by default) -->
      <div data-layout-target="listView" id="locations_table" class="hidden">
        <div class="bg-white rounded-lg shadow">
          <!-- Mobile View (Inside List View) -->
          <div class="block lg:hidden">
            <% @locations.each do |location| %>
              <div class="location-card" 
                   data-location-id="<%= location.id %>"
                   data-controller="location-card"
                   data-action="mouseover->location-hover#highlightMarker mouseout->location-hover#resetMarker click->location-hover#focusMarker">
                <%= render partial: "pages/location_card", locals: { location: location } %>
              </div>
            <% end %>
          </div>

          <!-- Desktop Table View -->
          <div class="hidden lg:block">
            <div class="overflow-x-auto">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50 sticky top-0 z-10">
                  <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-48">
                      Image
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Location
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Region/State
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Avg Green Fee
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Est Trip Cost
                    </th>
                    <th scope="col" class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Compare
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  <% @locations.each do |location| %>
                    <tr class="hover:bg-gray-50 location-row" 
                        data-location-id="<%= location.id %>"
                        data-action="mouseover->location-hover#highlightMarker mouseout->location-hover#resetMarker click->location-hover#focusMarker">
                      <td class="px-6 py-4">
                        <div class="relative h-24 w-36 rounded-lg overflow-hidden">
                          <%= image_tag location.image_url, 
                              class: "h-full w-full object-cover",
                              alt: "#{location.name} featured image" %>
                        </div>
                      </td>
                      <td class="px-6 py-4">
                        <div class="text-sm font-medium text-[#355E3B]">
                          <%= link_to location.name, location_path(location), data: { turbo_frame: "_top" } %>
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-900">
                        <%= location.region %>, <%= location.state %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-900">
                        <%= number_to_currency(location.avg_green_fee, precision: 0) %>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-900">
                        <%= number_to_currency(location.estimated_trip_cost, precision: 0) %>
                      </td>
                      <td class="px-6 py-4 text-center">
                        <input type="checkbox" 
                               class="location-compare-checkbox h-5 w-5 text-indigo-600 rounded border-gray-300 focus:ring-indigo-500"
                               data-location-id="<%= location.id %>"
                               data-action="change->comparison#toggleLocation"
                               data-comparison-target="checkbox">
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .sort-link {
    @apply text-gray-500 hover:text-gray-700 transition-colors duration-200;
  }
  
  .sort-indicator {
    @apply opacity-50 group-hover:opacity-100 transition-opacity duration-200;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1279px) {
    #grid_view {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }
  
  @media (max-width: 767px) {
    #grid_view {
      grid-template-columns: minmax(0, 1fr);
    }
    .lg\:grid-cols-2 {
      grid-template-columns: minmax(0, 1fr);
    }
    #locations-map {
      height: 400px;
      min-height: 400px;
    }
    .grid-view-wrapper {
      height: auto;
      min-height: 0;
    }
  }
</style>
