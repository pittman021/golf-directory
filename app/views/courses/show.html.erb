          <div class="rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-200">
            <%= image_tag nearby_course.medium_image, class: "w-full h-48 object-cover", alt: nearby_course.name %>
            <div class="p-4">
